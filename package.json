{
  "name": "crafter-code",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@crafter-code/web",
    "dev:desktop": "turbo run dev --filter=@crafter-code/desktop",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@crafter-code/web",
    "build:desktop": "turbo run build --filter=@crafter-code/desktop",
    "lint": "biome check --write .",
    "typecheck": "turbo run typecheck",
    "tauri:dev": "turbo run tauri:dev --filter=@crafter-code/desktop",
    "tauri:build": "turbo run tauri:build --filter=@crafter-code/desktop"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@resvg/resvg-js": "^2.6.2",
    "@types/node": "^20",
    "sharp": "^0.34.5",
    "turbo": "^2.5.3",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ],
  "packageManager": "bun@1.2.5"
}
